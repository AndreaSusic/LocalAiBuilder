            { label: 'H₁', action: () => exec('formatBlock','H1'), title: 'Heading 1' },
            { label: '¶', action: () => exec('formatBlock','P'), title: 'Paragraph' },
            { label: '🔲', action: () => insertComponent('card'), title: 'Insert Card' },
