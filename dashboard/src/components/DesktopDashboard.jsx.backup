              about: \`
                <section class="about-section" style="padding: 60px 20px; background: #f8f9fa;">
                  <div style="max-width: 1200px; margin: 0 auto;">
                    <h2 data-editable="true" style="text-align: center; margin-bottom: 40px;">About Us</h2>
