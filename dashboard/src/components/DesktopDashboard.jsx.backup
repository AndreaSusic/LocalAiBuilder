        // Toggle functions
        function toggleResizeBox() {
          // Add resize handles to selected element
          if (activeElement) {
            activeElement.style.resize = activeElement.style.resize === 'both' ? 'none' : 'both';
            activeElement.style.overflow = 'auto';
